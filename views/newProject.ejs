<!doctype HTML>
<html lang="en">
<%- include('layouts/header') -%>
<body>
<%- include('layouts/navBar') -%>
<!--main body-->
<div class="container" style="margin-top: 130px; margin-bottom: 70px;">

    <!--Section: Content-->
    <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">

        <!--Grid row-->
        <div class="row justify-content-center align-items-center">

            <div class="col-md-10 text-center pt-5">
                <h1 class="display-4 text-dark font-weight-bold mb-4">Create New Project</h1>
                <form action="/store/project" method="post" enctype="multipart/form-data">
                    <input type="text" name="title" placeholder="Your Post Title" class="form-control mb-3" required />
                    <input type="text" name="summary" placeholder="Your Post Summary" class="form-control mb-3" required />
                    <input type="url" name="url" placeholder="project url" class="form-control mb-3" required />
                    <input type="file" name="image" placeholder="Post Image" class="form-control mb-3" accept="image/*" required />
                    <textarea name="body" placeholder="Your Post Details" class="form-control mb-3" rows="7" required></textarea>
                    <button class="btn btn-primary mr-2" type="submit">submit post</button>
                </form>
            </div>

        </div>
        <!--Grid row-->


    </section>
    <!--Section: Content-->


</div>
<!--main body-->
<%- include('layouts/footer') -%>
</body>
<!--scripts-->
<%- include('layouts/scripts') -%>
</html>