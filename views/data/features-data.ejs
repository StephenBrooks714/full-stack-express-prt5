<div class="row justify-content-center align-items-center text-center flex-center d-flex mx-auto" style="margin-bottom: 70px;">
    <% if(features == "") { %>
        <div class="col-md-8">
            <h2>There are no features or services posted yet.</h2>
        </div>
    <% } else { %>
        <% for(i=0; i < features.length; i++) { %>
            <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-4">
                <a href="/feature/<%= features[i]._id %>">
                    <p class="h4"><%= features[i].title %></p>
                    <img src="<%= features[i].image %>" class="card-img" alt="<%= features[i].title %>" />
                </a>
            </div>
        <% } %>
    <% } %>
</div>