<div class="row justify-content-center align-items-center text-center flex-center d-flex mx-auto" style="margin-bottom: 70px;">
    <% if(projects == "") { %>
        <div class="col-md-8">
            <h2>There are no projects posted yet.</h2>
        </div>
    <% } else { %>
        <% for(i=0; i < projects.length; i++) { %>
            <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-4">
                <a href="/project/<%= projects[i]._id %>">
                    <p class="h4"><%= projects[i].title %></p>
                    <img src="<%= projects[i].image %>" class="card-img" alt="<%= projects[i].title %>" />
                </a>
            </div>
        <% } %>
    <% } %>
</div>