<div class="row justify-content-center align-items-center text-center flex-center d-flex mx-auto" style="margin-bottom: 70px;">
    <% if(blogs == "") { %> 
        <div class="col-md-8">
            <h2>There are no blogs posted yet.</h2>
        </div>
    <% } else { %>
        <% for(i=0; i < blogs.length; i++) { %> 
            <div class="col-lg-3 hover-zoom col-md-6 col-sm-12 mb-4">
                <a href="/post/<%= blogs[i]._id %>">
                    <p class="h4"><%= blogs[i].title %></p>
                    <img src="<%= blogs[i].image %>" class="card-img" alt="<%= blogs[i].title %>" />
                </a>
            </div>
        <% } %>
    <% } %>
</div>